# Azure Functions Configuration
AZURE_FUNCTIONS_ENVIRONMENT=development

# Azure Services
AZURE_COSMOS_CONNECTION_STRING=AccountEndpoint=https://your-cosmos-account.documents.azure.com:443/;AccountKey=your-key;
AZURE_COSMOS_DATABASE_NAME=vimarsh
AZURE_COSMOS_CONTAINER_NAME=spiritual_texts

# User Profile Database (2-Container Design)
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-db-key-here
COSMOS_DB_NAME=vimarsh-db

AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage;AccountKey=your-key;

# Google AI Services
GOOGLE_AI_API_KEY=your-gemini-api-key
GOOGLE_CLOUD_PROJECT=your-project-id

# LLM Configuration
LLM_MODEL=gemini-pro
LLM_TEMPERATURE=0.7
MAX_TOKENS=4096
SAFETY_SETTINGS=BLOCK_MEDIUM_AND_ABOVE

# RAG Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_DIMENSION=384
SIMILARITY_THRESHOLD=0.7
MAX_RETRIEVED_CHUNKS=10

# Voice Services (Optional - for production)
GOOGLE_CLOUD_TTS_API_KEY=your-tts-key
GOOGLE_CLOUD_STT_API_KEY=your-stt-key

# Application Settings
DEFAULT_LANGUAGE=English
SUPPORTED_LANGUAGES=English,Hindi
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Expert Review System
EXPERT_REVIEW_ENABLED=true
EXPERT_NOTIFICATION_EMAIL=experts@vimarsh.ai

# Development Settings
DEBUG=true
LOG_LEVEL=INFO
