# Development Environment Configuration
ENVIRONMENT=development
LOG_LEVEL=DEBUG
NODE_ENV=development

# Azure Configuration (Development Resource Group)
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=vimarsh-dev-rg
AZURE_LOCATION=eastus

# Authentication Configuration (Development Tenant)
AZURE_AD_TENANT_ID=your-dev-tenant-id
AZURE_AD_CLIENT_ID=your-dev-client-id
JWT_ISSUER=https://login.microsoftonline.com/your-dev-tenant-id/v2.0
JWT_JWKS_URI=https://login.microsoftonline.com/your-dev-tenant-id/discovery/v2.0/keys

# API Configuration (Development Keys)
GEMINI_API_KEY=your-dev-gemini-api-key
COSMOS_CONNECTION_STRING=your-dev-cosmos-connection-string
COSMOS_DATABASE_NAME=SpiritualGuidanceDev
COSMOS_CONTAINER_NAME=Documents

# Application Configuration (Relaxed for Development)
MAX_QUERY_LENGTH=2000
RESPONSE_TIMEOUT_SECONDS=60
EXPERT_REVIEW_EMAIL=dev-team@example.com
DEFAULT_LANGUAGE=en

# Cost Management (Higher Limits for Testing)
MONTHLY_BUDGET_USD=100
COST_ALERT_THRESHOLD=0.9
TOKEN_RATE_LIMIT_PER_USER=5000

# Cache Configuration (Shorter TTL for Testing)
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=100

# Monitoring Configuration (Development Insights)
APPINSIGHTS_CONNECTION_STRING=your-dev-app-insights-connection-string
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_COST_TRACKING=true

# Security Configuration (Relaxed for Development)
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080
ENABLE_RATE_LIMITING=false
RATE_LIMIT_PER_MINUTE=1000

# Feature Flags (All Enabled for Testing)
ENABLE_VOICE_INTERFACE=true
ENABLE_EXPERT_REVIEW=true
ENABLE_ANALYTICS=true
ENABLE_PWA_FEATURES=true

# Development Specific
USE_LOCAL_VECTOR_STORAGE=true
LOCAL_VECTOR_STORAGE_PATH=./data/local_vectors
MOCK_LLM_RESPONSES=false
SKIP_AUTHENTICATION=false
ENABLE_DEBUG_LOGGING=true
SHOW_DETAILED_ERRORS=true
